{
  "name": "velkuns/adventofcode-template",
  "description": "Template CLI Application for adventofcode.com challenges",
  "type": "project",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Application\\": "./src",
      "Application\\Script\\": "./scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Application\\Tests\\Unit\\": "./tests/unit",
      "Application\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "require": {
    "php": "8.3.*",
    "ext-ctype": "*",
    "ext-json":"*",

    "eureka/kernel-console": "^6.0",
    "eureka/component-console": "^6.1",

    "velkuns/math": "^1.0",
    "velkuns/pipeline": "^0.2"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.91.2",
    "phpunit/phpcov": "^11.0.3",
    "phpunit/phpunit": "^12.4.5",
    "phpstan/phpstan": "^2.1.32",
    "phpstan/phpstan-phpunit": "^2.0.8"
  }
}
